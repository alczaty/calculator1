<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button2" app:layout_constraintTop_toBottomOf="@+id/button6"
    />
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/equal"
            app:layout_constraintStart_toEndOf="@+id/dot" app:layout_constraintTop_toBottomOf="@+id/button3"
    />
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button8"
            app:layout_constraintStart_toEndOf="@+id/button7"
            app:layout_constraintTop_toTopOf="@+id/button7"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" app:layout_constraintTop_toBottomOf="@+id/result"
            android:layout_marginTop="176dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button5" app:layout_constraintTop_toBottomOf="@+id/button9"
    />
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/divide"
            app:layout_constraintStart_toEndOf="@+id/button9"
            app:layout_constraintTop_toTopOf="@+id/button9" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button5"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button8"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button0"
            app:layout_constraintStart_toStartOf="@+id/button1" app:layout_constraintTop_toBottomOf="@+id/button1"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/plus"
            app:layout_constraintStart_toEndOf="@+id/button3" app:layout_constraintTop_toBottomOf="@+id/multiple"
    />
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button1" app:layout_constraintTop_toBottomOf="@+id/button5"
    />
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dot"
            app:layout_constraintStart_toEndOf="@+id/button0" app:layout_constraintTop_toBottomOf="@+id/button2"
    />
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            app:layout_constraintStart_toStartOf="@+id/button7" app:layout_constraintTop_toBottomOf="@+id/button7"
    />
    <Button
            android:text="x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/multiple"
            app:layout_constraintStart_toEndOf="@+id/button6" app:layout_constraintTop_toBottomOf="@+id/divide"
    />
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button1"
            app:layout_constraintStart_toStartOf="@+id/button4" app:layout_constraintTop_toBottomOf="@+id/button4"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button8"
            app:layout_constraintTop_toTopOf="@+id/button8"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/minus"
            app:layout_constraintTop_toBottomOf="@+id/plus" app:layout_constraintStart_toEndOf="@+id/equal"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            tools:layout_editor_absoluteY="85dp" android:id="@+id/result" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonclear"
            app:layout_constraintBottom_toTopOf="@+id/divide"
            app:layout_constraintEnd_toEndOf="@+id/divide"/>
</androidx.constraintlayout.widget.ConstraintLayout>